version: '3.8'

services:
  postgres:
    image: postgres:14.7-alpine
    container_name: software_tools_postgres
    ports:
      - 5433:5432
    networks:
      - software_tools_network
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
      - POSTGRES_DB=software_tools

networks:
  software_tools_network:
    external: true
